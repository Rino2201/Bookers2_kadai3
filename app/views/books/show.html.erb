<div class="container mt-4">
  <div class="row">
    <div class="col-md-3">

      <%= render 'users/userinfonewbook', user:@user , book:@newbook %>
      <!--userinfo,newbook表示-->
    </div>
<!------------------------------------------------------------------->
    <div class="col-md-8 offset-md-1">
      <h2 class="mt-2">Book detail</h2>

      <table class="table", cellpadding = "5">
          <tr>
            <td>
              <%= link_to (@book.user) do %>
                <%= image_tag @book.user.get_profile_image('100x100') %><br>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td><%= link_to @book.title, @book %></td>
            <td><%= @book.body %></td>
            <td>
              <% if @book.user_id == current_user.id %>
                <%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %>
              <% end %>
              </td>
            <td>
              <% if @book.user_id == current_user.id %>
                <%= link_to "Destroy", @book, method: :delete, data: { confirm: '本当に消しますか？'}, class: "btn btn-danger" %>
              <% end %>
            </td>
          </tr>
      </table>
    </div>
  </div>
</div>
